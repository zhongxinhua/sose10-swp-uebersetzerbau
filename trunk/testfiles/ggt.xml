<module name="mathe">
<class name="Mathe">
  <function name="ggt"  returns="int" static="yes">
      <arguments>
          <decl type="int"  name="a"/>
          <decl type="int" name="b"/>
      </arguments>
      <do test="b != 0">
          <decl type="int"  name="h" value="a%b"/>
          <set name="a" value="b"/>
          <set name="b" value="h"/>
      </do>
      <return value="a"/>
  </function>
</class>

